<p id="notice"><%= notice %></p>

<% if user_signed_in? %>

  <h1>Locations</h1>

  <form action="/locations/search" method="GET" id="search-form">
    <input type="text" placeholder="Location" name="name" value="<%= @name %>" id="name_val">
    <input type="submit" value="Search" class="btn button-primary">
  </form>

  <div id="location_search_results">
    <%= render 'locations/list' %>
  </div>

  <br>

  <%= link_to 'New Location', new_location_path %>

<% end %>
